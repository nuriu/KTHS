<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.nuriuzunoglu.kths.AddReminderActivity">

    <EditText
        android:id="@+id/hatirlat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/reminder_location_desc"/>

    <EditText
        android:id="@+id/konum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/reminder_location_title"/>
    <EditText
        android:id="@+id/saat"
        android:inputType="time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/reminder_hour"/>

    <Button
        android:onClick="AddReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_reminder"/>

</LinearLayout>
